{
  "name": "samsonphp/bootstrap",
  "description": "Application bootstrap for SamsonPHP",
  "author": {
    "name": "Vitaly Iegorov",
    "email": "egorov@samsonos.com"
  },
  "licence": "Open Software License (OSL) v 3.0",
  "minimum-stability": "dev",
  "require-dev": {
    "samsonos/php_core": "*",
    "samsonos/php_resourcer": "*",
    "samsonos/php_activerecord": "*",
    "samsonos/php_less": "*",
    "samsonos/php_compressor": "*",
    "samsonos/js_core": "*",
    "samsonphp/deploy": "*",
    "samsonphp/router": "*",
    "samsonos/php_optimage": "*",
    "samsonos/php_minify": "*",
    "samsonos/cms_api": "*",
    "samsonos/seo_sitemap": "*",
    "samsonos/php_i18n": "*",
    "phpunit/phpunit": "4.*",
    "behat/behat": "3.*@stable",
    "behat/mink": "1.6.*@stable",
    "behat/mink-extension": "@stable",
    "behat/mink-selenium2-driver": "@stable"
  },
  "autoload": {
    "classmap": ["src/", "www/cache/"]
  },
  "scripts": {
    "pre-install-cmd": [
      "rm -rf www/cache",
      "mkdir -p www/cache",
      "chmod 0777 www/cache"
    ],
    "pre-update-cmd": [
      "rm -rf www/cache",
      "mkdir -p www/cache",
      "chmod 0777 www/cache"
    ]
  }
}
